<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheetcontainer"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingBottom="50dp"
    android:paddingRight="30dp"
    android:background="@drawable/button_sheet"
    android:layout_height="wrap_content">

    <TextView

        android:layout_gravity="center"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="serif-monospace"
        android:letterSpacing="0.17"
        android:text="Filter"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="3dp">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="Radius Jarak Pencarian"

        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:text=""
        android:id="@+id/halo"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

    <SeekBar
        android:id="@+id/radius_jarak"
        android:layout_width="match_parent"
        android:min="0"
        android:max="2000"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

    </SeekBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:id="@+id/textInputLayout"-->
<!--            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/txtJarakRadius"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Masukkan Jarak Radius (Meter)"-->
<!--                android:inputType="number" />-->


<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <Button
            android:id="@+id/btn_tentukan"
            android:layout_width="wrap_content"
            android:text="Tentukan"
            android:background="@drawable/bg_btn"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

        </Button>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="Daftar Laundry Favorit"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content">
    </TextView>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btn_fav"
        android:text="Favorite"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn"
        android:layout_height="wrap_content">

    </Button>

</LinearLayout>